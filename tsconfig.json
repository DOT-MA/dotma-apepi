{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2017",
      "moduleResolution": "node",
      "declaration": true,
      "rootDir": "./",
      "baseUrl": "./",
      "outDir": "dist",
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": false,
      "removeComments": true,
      "resolveJsonModule": true,
      "allowJs": false,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
    },
    "include": ["src", "test"],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }